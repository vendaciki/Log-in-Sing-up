  opacity: 0.9;}

button:hover {
  opacity: 1;} 

/* Přidejte výplň k prvkům kontejneru */
.container {
  padding: 16px;}
 
/* The Modal (pozadí) */
.modal {
  display: none; /* Ve výchozím nastavení skryté */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%; /* Plná šířka */
  height: 100%; /* Plná výška */
  overflow: auto; /* Enable - V případě potřeby povolte posouvání */
  background-color: rgb(0,0,0); /* Záložní barva */
  background-color: rgba(0,0,0,0.4); /* Černá s průhledností */
  padding-top: 50px;}

/* Modal Content/Box */
.modal-content {
  background-color: #fefefe;
  margin: auto auto; /* 5% shora, auto, 15% zespodu, auto a na střed */
  border: 1px solid #888;
  width: 50%;} /* Může to být více či méně, v závislosti na velikosti obrazovky */
 
/* Tlačítko zavřít (x) */
.close {
  position: absolute;
  right: 25px;
  top: 0;
  color: #000;
  font-size: 35px;
  font-weight: bold;}

/* nastavení tlačítka (X) */
.close:hover,
.close:focus {
  color: red;
  cursor: pointer;}
  
/* Extra styly pro tlačítko (X) */
.imgcontainer {
  text-align: center;
  margin: 24px 0 12px 0;
  position: relative;}  

/* Clear floats */
.clearfix::after {
  content: "";
